<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="introduceSql">
    <select id="interview">
        select 
            *
        from bby_preinterview.conent_interview
    </select>
    <insert id="interviewInsert">
        insert into 
            bby_preinterview.conent_interview (
                subject                
                , content 
            )
            values (
                #{wr_subject}
                , #{wr_content}
            )
    </insert>
    <select id="meetingArrange">
        select 
            *            
        from bby_portfolio.portfolio
    </select>
    <insert id="meetingArrangeInsert">
        insert into 
            bby_portfolio.portfolio (
                subject                
                , content
                , category
                , thumb
                , ori
                , data
                <if test="updataday != null && updateday ==''">
                , updateday
                </if>
            )
            values (
                 subject                
                , content
                , category
                , thumb
                , ori
                , data
                <if test="updataday != null && updateday ==''">
                , #{updateday}
                </if>
            )
    </insert>    
</mapper>

